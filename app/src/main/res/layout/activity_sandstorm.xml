        app:layout_constraintEnd_toStartOf="@+id/CargoShipCargoLeft2"
        app:layout_constraintTop_toBottomOf="@+id/CSPL1" />

    <at.markushi.ui.CircleButton
        android:id="@+id/CargoShipCargoLeft2"
