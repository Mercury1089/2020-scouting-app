    <at.markushi.ui.CircleButton
        android:id="@+id/CargoShipPanelRight3"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:onClick="CSPR3CounterClick"
        app:cb_color="@color/defaultdisabled"
        app:cb_pressedRingWidth="10dp"
        app:layout_constraintStart_toEndOf="@+id/CargoShipPanelRight2"
        app:layout_constraintTop_toTopOf="@+id/CSPR3" />

    <!-- Counter Display Texts for Location Buttons-->


    <TextView
        android:id="@+id/CSCL1"
        android:layout_width="50dp"
        android:layout_height="52dp"
        android:gravity="center"
        android:onClick="CSCL1CounterClick"
        android:tag="T,C,C,L,,1"
        android:text="@string/C"
        android:textColor="@color/bootstrap_dropdown_divider"
        app:layout_constraintBottom_toBottomOf="@+id/CargoShipCargoLeft1"
        app:layout_constraintEnd_toEndOf="@+id/CargoShipCargoLeft1"
        app:layout_constraintTop_toBottomOf="@+id/CSPL1"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/CSCL2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:gravity="center"
        android:onClick="CSCL2CounterClick"
        android:tag="T,C,C,L,,2"
        android:text="@string/C"
        android:textColor="@color/bootstrap_dropdown_divider"
        app:layout_constraintEnd_toEndOf="@+id/CargoShipCargoLeft2"
        app:layout_constraintTop_toBottomOf="@+id/CSPL2" />

    <TextView
        android:id="@+id/CSCL3"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:gravity="center"
        android:onClick="CSCL3CounterClick"
        android:tag="T,C,C,L,,3"
        android:text="@string/C"
        android:textColor="@color/bootstrap_dropdown_divider"
        app:layout_constraintEnd_toEndOf="@+id/CargoShipCargoLeft3"
        app:layout_constraintTop_toTopOf="@+id/CargoShipCargoLeft3" />

    <TextView
        android:id="@+id/CSCF1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:gravity="center"
        android:onClick="CSCF1CounterClick"
        android:tag="T,C,C,F,,1"
        android:text="@string/C"
        android:textColor="@color/bootstrap_dropdown_divider"
        app:layout_constraintEnd_toEndOf="@+id/CargoShipCargoFront1"
        app:layout_constraintTop_toTopOf="@+id/CargoShipCargoFront1" />

    <TextView
        android:id="@+id/CSCF2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:gravity="center"
        android:onClick="CSCF2CounterClick"
        android:tag="T,C,C,F,,2"
        android:text="@string/C"
        android:textColor="@color/bootstrap_dropdown_divider"
        app:layout_constraintBottom_toBottomOf="@+id/CargoShipCargoFront2"
        app:layout_constraintEnd_toEndOf="@+id/CargoShipCargoFront2"
        app:layout_constraintTop_toBottomOf="@+id/CSCF1"
        app:layout_constraintVertical_bias="1.0" />


    <TextView
        android:id="@+id/CSCR1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:gravity="center"
        android:onClick="CSCR1CounterClick"
        android:tag="T,C,C,R,,1"
        android:text="@string/C"
        android:textColor="@color/bootstrap_dropdown_divider"
        app:layout_constraintBottom_toBottomOf="@+id/CargoShipCargoRight1"
        app:layout_constraintEnd_toEndOf="@+id/CargoShipCargoRight1"
        app:layout_constraintTop_toBottomOf="@+id/CSCL1"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/CSCR2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:gravity="center"
        android:onClick="CSCR2CounterClick"
        android:tag="T,C,C,R,,2"
        android:text="@string/C"
        android:textColor="@color/bootstrap_dropdown_divider"
        app:layout_constraintEnd_toEndOf="@+id/CargoShipCargoRight2"
        app:layout_constraintTop_toBottomOf="@+id/CSCL2" />

    <TextView
        android:id="@+id/CSCR3"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:gravity="center"
        android:onClick="CSCR3CounterClick"
        android:tag="T,C,C,R,,3"
        android:text="@string/C"
        android:textColor="@color/bootstrap_dropdown_divider"
        app:layout_constraintEnd_toEndOf="@+id/CargoShipCargoRight3"
        app:layout_constraintTop_toBottomOf="@+id/CSCL3" />

    <TextView
        android:id="@+id/CSPL1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:gravity="center"
        android:onClick="CSPL1CounterClick"
        android:tag="T,C,P,L,,1"
        android:text="@string/P"
        android:textColor="@color/bootstrap_dropdown_divider"
        app:layout_constraintBottom_toBottomOf="@+id/CargoShipPanelLeft1"
        app:layout_constraintStart_toStartOf="@+id/CargoShipPanelLeft1" />

    <TextView
        android:id="@+id/CSPL2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:gravity="center"
        android:onClick="CSPL2CounterClick"
        android:tag="T,C,P,L,,2"
        android:text="@string/P"
        android:textColor="@color/bootstrap_dropdown_divider"
        app:layout_constraintEnd_toEndOf="@+id/CargoShipPanelLeft2"
        app:layout_constraintTop_toTopOf="@+id/CargoShipPanelLeft2" />

    <TextView
        android:id="@+id/CSPL3"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:gravity="center"
        android:onClick="CSPL3CounterClick"
        android:tag="T,C,P,L,,3"
        android:text="@string/P"
        android:textColor="@color/bootstrap_dropdown_divider"
        app:layout_constraintBottom_toTopOf="@+id/CSCL3"
        app:layout_constraintEnd_toEndOf="@+id/CargoShipPanelLeft3"
        app:layout_constraintTop_toTopOf="@+id/CargoShipPanelLeft3" />

    <TextView
        android:id="@+id/CSPF1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:gravity="center"
        android:onClick="CSPF1CounterClick"
        android:tag="T,C,P,F,,1"
        android:text="@string/P"
        android:textColor="@color/bootstrap_dropdown_divider"
        app:layout_constraintEnd_toEndOf="@+id/CargoShipPanelFront1"
        app:layout_constraintTop_toTopOf="@+id/CargoShipPanelFront1" />

    <TextView
        android:id="@+id/CSPF2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:gravity="center"
        android:onClick="CSPF2CounterClick"
        android:tag="T,C,P,F,,2"
        android:text="@string/P"
        android:textColor="@color/bootstrap_dropdown_divider"
        app:layout_constraintEnd_toEndOf="@+id/CargoShipPanelFront2"
        app:layout_constraintTop_toBottomOf="@+id/CSPF1" />

    <TextView
        android:id="@+id/CSPR1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:gravity="center"
        android:onClick="CSPR1CounterClick"
        android:tag="T,C,P,R,,1"
        android:text="@string/P"
        android:textColor="@color/bootstrap_dropdown_divider"
        app:layout_constraintEnd_toEndOf="@+id/CargoShipPanelRight1"
        app:layout_constraintTop_toBottomOf="@+id/CSCR1" />

    <TextView
        android:id="@+id/CSPR2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:gravity="center"
        android:onClick="CSPR2CounterClick"
        android:tag="T,C,P,R,,2"
        android:text="@string/P"
        android:textColor="@color/bootstrap_dropdown_divider"
        app:layout_constraintEnd_toEndOf="@+id/CargoShipPanelRight2"
        app:layout_constraintTop_toBottomOf="@+id/CSCR2" />

    <TextView
        android:id="@+id/CSPR3"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:gravity="center"
        android:onClick="CSPR3CounterClick"
        android:tag="T,C,P,R,,3"
        android:text="@string/P"
        android:textColor="@color/bootstrap_dropdown_divider"
        app:layout_constraintEnd_toEndOf="@+id/CargoShipPanelRight3"
        app:layout_constraintTop_toBottomOf="@+id/CSCR3" />


    <!-- General Use Buttons-->
    <Button
        android:id="@+id/UndoButton"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_marginTop="96dp"
        android:onClick="UndoClick"
        android:text="@string/Undo"
        app:layout_constraintStart_toStartOf="@+id/CSPR3"
        app:layout_constraintTop_toBottomOf="@+id/CSPR3" />

    <Switch
        android:id="@+id/FellOverSwitch"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:text="@string/FellOver"
        android:textColor="@color/bootstrap_dropdown_divider"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/CrossedHABLineSwitch" />

    <Switch
        android:id="@+id/CrossedHABLineSwitch"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="@string/HABLine"
        android:textColor="@color/bootstrap_dropdown_divider"
        app:layout_constraintStart_toStartOf="@+id/FellOverSwitch"
        app:layout_constraintTop_toBottomOf="@+id/UndoButton" />


    <com.beardedhen.androidbootstrap.BootstrapButtonGroup
        android:id="@+id/OnHab"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        app:bootstrapBrand="secondary"
        app:bootstrapSize="lg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:roundedCorners="true">


        <com.beardedhen.androidbootstrap.BootstrapButton
            android:id="@+id/SetupButton"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/Setup"
            android:textSize="36sp" />

        <com.beardedhen.androidbootstrap.BootstrapButton
            android:id="@+id/SandstormButton"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"

            android:text="@string/Sandstorm"
            android:textSize="36sp" />

        <com.beardedhen.androidbootstrap.BootstrapButton
            android:id="@+id/TeleopButton"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:onClick="teleopClick"
            android:text="@string/Teleop"
            android:textSize="36sp" />

        <com.beardedhen.androidbootstrap.BootstrapButton
            android:id="@+id/ClimbButton"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:onClick="climbClick"
            android:text="@string/Climb"
            android:textSize="36sp" />
    </com.beardedhen.androidbootstrap.BootstrapButtonGroup>

</android.support.constraint.ConstraintLayout>