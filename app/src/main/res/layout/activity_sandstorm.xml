    <at.markushi.ui.CircleButton
        android:id="@+id/CargoShipCargoLeft3"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:onClick="CSCL3CounterClick"
        app:cb_color="@color/defaultdisabled"
        app:cb_pressedRingWidth="10dp"
        app:layout_constraintStart_toEndOf="@+id/CargoShipCargoLeft2"
        app:layout_constraintTop_toTopOf="@+id/CargoShipCargoLeft2" />

    <at.markushi.ui.CircleButton
        android:id="@+id/CargoShipCargoFront1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="12dp"
        android:onClick="CSCF1CounterClick"
        app:cb_color="@color/defaultdisabled"
        app:cb_pressedRingWidth="10dp"
        app:layout_constraintStart_toEndOf="@+id/CargoShipPanelFront1"
        app:layout_constraintTop_toBottomOf="@+id/CargoShipPanelLeft1" />

    <at.markushi.ui.CircleButton
        android:id="@+id/CargoShipCargoFront2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="12dp"
        android:onClick="CSCF2CounterClick"
        app:cb_color="@color/defaultdisabled"
        app:cb_pressedRingWidth="10dp"
        app:layout_constraintStart_toEndOf="@+id/CargoShipPanelFront2"
