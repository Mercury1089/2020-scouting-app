    <at.markushi.ui.CircleButton
        android:id="@+id/CargoShipCargoRight1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:onClick="CSCR1CounterClick"
        app:cb_color="@color/defaultdisabled"
        app:cb_pressedRingWidth="10dp"
        app:layout_constraintStart_toEndOf="@+id/CargoShipCargoFront2"
        app:layout_constraintTop_toBottomOf="@+id/CSCL1" />

    <at.markushi.ui.CircleButton
        android:id="@+id/CargoShipCargoRight2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:onClick="CSCR2CounterClick"
        app:cb_color="@color/defaultdisabled"
        app:cb_pressedRingWidth="10dp"
        app:layout_constraintStart_toEndOf="@+id/CargoShipCargoRight1"
        app:layout_constraintTop_toBottomOf="@+id/CSCL2" />

    <at.markushi.ui.CircleButton
        android:id="@+id/CargoShipCargoRight3"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:onClick="CSCR3CounterClick"
        app:cb_color="@color/defaultdisabled"
        app:cb_pressedRingWidth="10dp"
        app:layout_constraintStart_toEndOf="@+id/CargoShipCargoRight2"
        app:layout_constraintTop_toTopOf="@+id/CSCR3" />

    <at.markushi.ui.CircleButton
        android:id="@+id/CargoShipPanelLeft1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="396dp"
        android:layout_marginEnd="16dp"
        android:onClick="CSPL1CounterClick"
        app:cb_color="@color/defaultdisabled"
        app:cb_pressedRingWidth="10dp"
        app:layout_constraintEnd_toStartOf="@+id/CargoShipPanelLeft2"
        app:layout_constraintTop_toBottomOf="@+id/OnHab" />

    <at.markushi.ui.CircleButton
        android:id="@+id/CargoShipPanelLeft2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="396dp"
        android:onClick="CSPL1CounterClick"
        app:cb_color="@color/defaultdisabled"
        app:cb_pressedRingWidth="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/CSPL1" />

    <at.markushi.ui.CircleButton
        android:id="@+id/CargoShipPanelLeft3"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:onClick="CSPL3CounterClick"
        app:cb_color="@color/defaultdisabled"
        app:cb_pressedRingWidth="10dp"
        app:layout_constraintBottom_toTopOf="@+id/CSCL3"
        app:layout_constraintStart_toEndOf="@+id/CargoShipPanelLeft2" />

    <at.markushi.ui.CircleButton
        android:id="@+id/CargoShipPanelFront1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginEnd="80dp"
        android:onClick="CSPF1CounterClick"
        app:cb_color="@color/defaultdisabled"
        app:cb_pressedRingWidth="10dp"
        app:layout_constraintEnd_toStartOf="@+id/CargoShipPanelRight1"
        app:layout_constraintTop_toBottomOf="@+id/CargoShipPanelLeft1" />

    <at.markushi.ui.CircleButton
        android:id="@+id/CargoShipPanelFront2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginEnd="12dp"
        android:onClick="CSPF2CounterClick"
        app:cb_color="@color/defaultdisabled"
        app:cb_pressedRingWidth="10dp"
        app:layout_constraintEnd_toStartOf="@+id/CargoShipCargoFront1"
        app:layout_constraintTop_toBottomOf="@+id/CSPF1" />

    <at.markushi.ui.CircleButton
        android:id="@+id/CargoShipPanelRight1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:onClick="CSPR1CounterClick"
        app:cb_color="@color/defaultdisabled"
        app:cb_pressedRingWidth="10dp"
        app:layout_constraintStart_toStartOf="@+id/CargoShipPanelLeft1"
        app:layout_constraintTop_toBottomOf="@+id/CargoShipCargoRight1" />

    <at.markushi.ui.CircleButton
        android:id="@+id/CargoShipPanelRight2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:onClick="CSPR2CounterClick"
        app:cb_color="@color/defaultdisabled"
        app:cb_pressedRingWidth="10dp"
        app:layout_constraintStart_toStartOf="@+id/CargoShipCargoRight2"
