<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_clear_confirm_popup"
    android:minWidth="400dp"
    android:minHeight="900dp">

    <Button
        android:id="@+id/ClearConfirm"
        android:layout_width="410dp"
        android:layout_height="75dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/button_active"
        android:text="@string/Clear"
        android:textColor="@drawable/text_states"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/IDClearDirections" />

    <Button
        android:id="@+id/CancelConfirm"
        android:layout_width="410dp"
        android:layout_height="75dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/button_default"
        android:text="@string/Cancel"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/ClearConfirm"
        app:layout_constraintTop_toBottomOf="@+id/ClearConfirm" />

    <TextView
        android:id="@+id/IDClearDirections"
        android:layout_width="427dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="350dp"
        android:fontFamily="sans-serif-light"
        android:text="Are you sure you want to clear all data on the setup screen?"
        android:textColor="@color/bootstrap_brand_secondary_border"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/IDClear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="128dp"
        android:layout_marginTop="296dp"
        android:fontFamily="sans-serif-black"
        android:text="@string/ClearTitle"
        android:textColor="@color/bootstrap_brand_secondary_border"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>