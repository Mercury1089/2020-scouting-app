        app:layout_constraintTop_toTopOf="@+id/MissedCounterCircle" />

    <TextView
        android:id="@+id/PanelCounterText"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginStart="78dp"
        android:enabled="false"
        android:gravity="center"
        android:tag="S,P,P,,,"
        android:text="@string/zero"
        android:textColor="@color/bootstrap_dropdown_divider"
        app:layout_constraintEnd_toEndOf="@+id/PanelCounterCircle"
        app:layout_constraintStart_toStartOf="@+id/PanelOrCargo"
        app:layout_constraintTop_toTopOf="@+id/PanelCounterCircle" />

    <TextView
        android:id="@+id/CargoCounterText"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:enabled="false"
        android:gravity="center"
        android:tag="S,P,C,,,"
        android:text="@string/zero"
        android:textColor="@color/bootstrap_dropdown_divider"
        app:layout_constraintEnd_toEndOf="@+id/CargoCounterCircle"
        app:layout_constraintStart_toStartOf="@+id/CargoCounterCircle"
        app:layout_constraintTop_toTopOf="@+id/CargoCounterCircle" />

