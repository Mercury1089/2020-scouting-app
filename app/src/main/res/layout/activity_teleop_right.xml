        android:saveEnabled="false"
        app:cb_color="@color/defaultdisabled"
        app:cb_pressedRingWidth="10dp"
        app:layout_constraintEnd_toEndOf="@+id/PanelOrCargo"
        app:layout_constraintTop_toTopOf="@+id/PanelOrCargo" />

