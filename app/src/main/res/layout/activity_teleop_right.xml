    <TextView
        android:id="@+id/CSCF2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="24dp"
        android:gravity="center"
        android:tag="S,C,C,F,,2"
        android:text="@string/C"
        android:textColor="@color/bootstrap_dropdown_divider"
        app:layout_constraintStart_toEndOf="@+id/CSCR1"
        app:layout_constraintTop_toBottomOf="@+id/CSPR1" />

    <TextView
        android:id="@+id/CSCR1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:gravity="center"
        android:tag="S,C,C,R,,1"
        android:text="@string/C"
        android:textColor="@color/bootstrap_dropdown_divider"
        app:layout_constraintStart_toEndOf="@+id/CSCR2"
        app:layout_constraintTop_toBottomOf="@+id/CSPR1" />

    <TextView
        android:id="@+id/CSCR2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:gravity="center"
        android:tag="S,C,C,R,,2"
        android:text="@string/C"
        android:textColor="@color/bootstrap_dropdown_divider"
        app:layout_constraintStart_toEndOf="@+id/CSCR3"
        app:layout_constraintTop_toBottomOf="@+id/CSPR2" />

    <TextView
        android:id="@+id/CSCR3"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:gravity="center"
        android:tag="S,C,C,R,,3"
