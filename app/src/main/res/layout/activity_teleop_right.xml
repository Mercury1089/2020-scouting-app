        android:textColor="@color/bootstrap_dropdown_divider"
        app:layout_constraintStart_toEndOf="@+id/MissedCounterText"
        app:layout_constraintTop_toBottomOf="@+id/CSPR3" />

    <TextView
        android:id="@+id/CSPL1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:gravity="center"
        android:tag="S,C,P,L,,1"
        android:text="@string/P"
        android:textColor="@color/bootstrap_dropdown_divider"
        app:layout_constraintStart_toStartOf="@+id/CSCL1"
