        android:layout_width="45dp"
        android:layout_height="45dp"
        android:color="@color/grey"
        android:saveEnabled="false"
        app:cb_color="@color/defaultdisabled"
        app:cb_pressedRingWidth="10dp"
        app:layout_constraintEnd_toEndOf="@+id/DroppedButton"
        app:layout_constraintTop_toTopOf="@+id/DroppedCounterText" />

