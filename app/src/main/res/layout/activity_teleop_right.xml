    <TextView
        android:id="@+id/CSPF2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:gravity="center"
        android:tag="S,C,P,F,,2"
        android:text="@string/P"
        android:textColor="@color/bootstrap_dropdown_divider"
        app:layout_constraintStart_toEndOf="@+id/CSCF2"
        app:layout_constraintTop_toTopOf="@+id/CSCR1" />

    <TextView
        android:id="@+id/CSPR1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:gravity="center"
        android:tag="S,C,P,R,,1"
        android:text="@string/P"
        android:textColor="@color/bootstrap_dropdown_divider"
        app:layout_constraintStart_toStartOf="@+id/CSCR1"
        app:layout_constraintTop_toTopOf="@+id/CSPR2" />

    <TextView
        android:id="@+id/CSPR2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="96dp"
        android:gravity="center"
        android:tag="S,C,P,R,,2"
        android:text="@string/P"
        android:textColor="@color/bootstrap_dropdown_divider"
        app:layout_constraintStart_toEndOf="@+id/CSPR3"
        app:layout_constraintTop_toBottomOf="@+id/MissedCounterText" />

    <TextView
        android:id="@+id/CSPR3"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="96dp"
        android:gravity="center"
        android:tag="S,C,P,R,,3"
        android:text="@string/P"
        android:textColor="@color/bootstrap_dropdown_divider"
        app:layout_constraintEnd_toEndOf="@+id/CargoShipPanelRight3"
        app:layout_constraintTop_toBottomOf="@+id/MissedButton" />


    <!-- General Use Buttons-->
    <Switch
        android:id="@+id/FellOverSwitch"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginStart="24dp"
        android:text="@string/FellOver"
        android:textColor="@color/bootstrap_dropdown_divider"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/CrossedHABLineSwitch" />

    <Switch
        android:id="@+id/CrossedHABLineSwitch"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="@string/HABLine"
        android:textColor="@color/bootstrap_dropdown_divider"
        app:layout_constraintStart_toStartOf="@+id/FellOverSwitch"
        app:layout_constraintTop_toBottomOf="@+id/UndoButton" />

    <TextView
        android:id="@+id/IDPossession"
        android:layout_width="wrap_content"
        android:layout_height="18dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="84dp"
        android:fontFamily="sans-serif-black"
        android:text="@string/Possession"
        android:textColor="@color/bootstrap_dropdown_divider"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/IDScoring"
        android:layout_width="wrap_content"
        android:layout_height="18dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:fontFamily="sans-serif-black"
        android:text="@string/Scoring"
        android:textColor="@color/bootstrap_dropdown_divider"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/PanelOrCargo" />

    <TextView
        android:id="@+id/IDPanelOrCargoDirections"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="@string/PossessionDirections"
        android:textColor="@color/bootstrap_dropdown_divider"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/IDPossession" />

    <TextView
        android:id="@+id/IDScoringPOrCDirections"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="@string/POrCDirections"
        android:textColor="@color/bootstrap_dropdown_divider"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/IDScoring" />

    <TextView
        android:id="@+id/IDScoringMissedDirections"
        android:layout_width="568dp"
        android:layout_height="39dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:text="@string/MissedDirections"
        android:textColor="@color/bootstrap_dropdown_divider"
        android:textSize="13.2sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/IDScoringPOrCDirections" />

    <TextView
        android:id="@+id/IDDroppedDirections"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="@string/DroppedDirections"
        android:textColor="@color/bootstrap_dropdown_divider"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/IDPanelOrCargoDirections" />

    <com.beardedhen.androidbootstrap.BootstrapButtonGroup
        android:id="@+id/PanelOrCargo"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        app:bootstrapBrand="success"
        app:bootstrapSize="lg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/IDDroppedDirections"
        app:roundedCorners="true">


        <com.beardedhen.androidbootstrap.BootstrapButton
            android:id="@+id/SPanelButton"
            android:layout_width="125dp"
            android:layout_height="match_parent"
            android:onClick="panelCounterClick"
            android:text="Panel     "
            android:textSize="36sp" />

        <com.beardedhen.androidbootstrap.BootstrapButton
            android:id="@+id/SCargoButton"
            android:layout_width="125dp"
            android:layout_height="match_parent"
            android:onClick="cargoCounterClick"
            android:text="Cargo     "
            android:textSize="36sp" />
    </com.beardedhen.androidbootstrap.BootstrapButtonGroup>

    <com.beardedhen.androidbootstrap.BootstrapButtonGroup
        android:id="@+id/OnHab"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        app:bootstrapBrand="secondary"
        app:bootstrapSize="lg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:roundedCorners="true">

        <com.beardedhen.androidbootstrap.BootstrapButton
            android:id="@+id/SetupButton"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:onClick="setupClick"
            android:text="@string/Setup"
            android:textSize="36sp" />

        <com.beardedhen.androidbootstrap.BootstrapButton
            android:id="@+id/SandstormButton"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:onClick="sandstormClick"
            android:text="@string/Sandstorm"
            android:textSize="36sp" />

        <com.beardedhen.androidbootstrap.BootstrapButton
            android:id="@+id/TeleopButton"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"

            android:text="@string/Teleop"
            android:textSize="36sp" />

        <com.beardedhen.androidbootstrap.BootstrapButton
            android:id="@+id/ClimbButton"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:onClick="climbClick"
            android:text="@string/Climb"
            android:textSize="36sp" />
    </com.beardedhen.androidbootstrap.BootstrapButtonGroup>

    <com.beardedhen.androidbootstrap.BootstrapButton
        android:id="@+id/MissedButton"
        android:layout_width="125dp"
        android:layout_height="45dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:onClick="missedClick"
        android:text="Missed     "
        android:textSize="36sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/IDScoringMissedDirections" />

    <at.markushi.ui.CircleButton
        android:id="@+id/MissedCounterCircle"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:color="@color/grey"
        app:cb_color="@color/defaultdisabled"
        app:cb_pressedRingWidth="10dp"
        app:layout_constraintEnd_toEndOf="@+id/MissedButton"
        app:layout_constraintTop_toTopOf="@+id/MissedButton" />

    <at.markushi.ui.CircleButton
        android:id="@+id/PanelCounterCircle"
        android:layout_width="45dp"
        android:layout_height="45dp"
