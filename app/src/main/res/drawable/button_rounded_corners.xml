<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- if you want clear round shape then make radius size is half of your  button`s height. -->
    <corners android:radius="10dp"/>
    <solid android:color="@color/button_default"/>

    <padding
        android:bottom="5dp"
        android:left="10dp"
        android:right="10dp"
        android:top="5dp"/>

    <item android:state_enabled="true"
        android:color="@color/button_default" />
    <item android:state_enabled="false"
        android:color="@color/button_disabled" />
    <item android:state_pressed="true"
        android:color="@color/button_active" />
    <item android:color="@color/button_default" />
    <!--TODO: might be selected not pressed-->
</shape>